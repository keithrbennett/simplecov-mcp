gemspec

# Development dependencies
gem 'rspec', '~> 3.0'
gem 'rake'
gem 'rubocop', '~> 1.0'
gem 'rubocop-rspec', '~> 3.0'

# Ruby 3.5+ will remove irb and rdoc from default gems
gem 'irb', '>= 1.0' if RUBY_VERSION >= '3.4'
gem 'rdoc', '>= 6.0' if RUBY_VERSION >= '3.4'
